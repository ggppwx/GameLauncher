{
  "name": "gamelauncher",
  "version": "0.0.1",
  "description": "A simple game launcher similar to Steam",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on tcp:3000 && cross-env NODE_ENV=development electron .\"",
    "dev:react": "vite",
    "build": "vite build",
    "build:electron": "electron-builder",
    "package:win": "cross-env ELECTRON_BUILDER_DISABLE_CODE_SIGNING=true npm run build && electron-builder --win zip",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "launcher",
    "games",
    "electron",
    "react",
    "tailwind"
  ],
  "author": "roy",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.0.0",
    "cross-env": "^10.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^4.4.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.0",
    "@radix-ui/react-dropdown-menu": "^2.0.0",
    "@radix-ui/react-label": "^2.0.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.0",
    "@radix-ui/react-toast": "^1.0.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.0",
    "fs-extra": "^11.1.1",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.1.2",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "build": {
    "appId": "com.gamelauncher.app",
    "productName": "Game Launcher",
    "directories": {
      "output": "release"
    },
    "files": [
      "src/main.js",
      "src/preload.js",
      "src/main/**/*",
      "dist/**/*",
      "assets/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/sqlite3/**"
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "signingHashAlgorithms": [],
      "artifactName": "GameLauncher-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
